<div class="container" style="margin-top:5%; width: 40rem">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title" style="text-align: center;">Regsiter</h1>
            <div style="width:75%; margin-left:auto; margin-right: auto; display: block; margin-bottom: 2%;">
                <%- include ("./partials/messages") %>
            </div>
            <form name="register" action="/users/register" method="POST" onsubmit="return registerValidation()">
                <input type="text" id="name" name="name" placeholder="Enter Name" class="form-control" style="width: 75%; margin-left:auto; margin-right: auto;"> <br>
                <input type="email" id="email" name="email" placeholder="Enter Email" class="form-control" style="width: 75%; margin-left:auto; margin-right: auto;"><br>
                <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" style="width: 75%; margin-left:auto; margin-right: auto;"><br>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" class="form-control" style="width: 75%; margin-left:auto; margin-right: auto;"><br>
                <div style="width: 75%; margin-left:auto; margin-right: auto;">
                    <div class="row">
                        <div class="col-sm-6" style="text-align: center;">
                            <label class="radio-inline"><input type="radio" id="vendor" name="type" value="0"> Vendor</label>
                        </div>
                        <div class="col-sm-6" style="text-align: center;">
                            <label class="radio-inline"><input type="radio" id="customer" name="type" value="1" checked> Customer</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success" style="width:75%; margin-left:auto; margin-right: auto; display: block;">Register</button>
            </form>
            <a href="login" class="btn btn-secondary" style="width:75%; margin-left:auto; margin-right: auto; display: block; margin-top:5%">Existing user? Login</a>
        </div>
    </div>
</div>
<script>
    function registerValidation() {
        let pass = document.forms['register']['password'].value;
        let confPass = document.forms['register']['confirmPassword'].value;
        if (pass !== confPass)
        {
            alert('Passwords are not same')
            return false
        }
        return true;
    }
</script>